<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_layout"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_alignParentBottom="true">

    <com.cangwang.base.ui.CircleImageView
        android:id="@+id/bottom_more_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:src="@android:drawable/stat_notify_more"
        app:civ_border_width="1dp"
        app:civ_border_color="#FFFFFF"/>
    <com.cangwang.base.ui.CircleImageView
        android:id="@+id/bottom_chat"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/bottom_more_btn"
        android:src="@android:drawable/stat_notify_chat"
        app:civ_border_width="1dp"
        app:civ_border_color="#FFFFFF"/>
    <com.cangwang.base.ui.CircleImageView
        android:id="@+id/bottom_gift"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_input_get"
        app:civ_border_width="1dp"
        app:civ_border_color="#FFFFFF"/>
</RelativeLayout>
