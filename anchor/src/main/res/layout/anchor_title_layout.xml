<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/anchor_title"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/anchor_coner">
        <com.cangwang.base.ui.CircleImageView
            android:id="@+id/anchor_img"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/anchor_img"
            app:civ_border_width="1dp"
            app:civ_border_color="#FFFFFF"/>
        <TextView
            android:id="@+id/anchor_name"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/anchor_img"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/anchor_care_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:text="Cangwang"/>

        <ImageView
            android:id="@+id/anchor_care_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_input_add" />
    </RelativeLayout>
</RelativeLayout>
